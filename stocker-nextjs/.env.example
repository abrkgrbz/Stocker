# Application
NEXT_PUBLIC_APP_NAME=Stocker ERP
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_BACKEND_URL=http://localhost:5000

# Authentication
NEXT_PUBLIC_AUTH_DOMAIN=http://localhost:3000
NEXT_PUBLIC_BASE_DOMAIN=localhost

# Production URLs
# NEXT_PUBLIC_API_URL=https://api.stoocker.app
# NEXT_PUBLIC_AUTH_DOMAIN=https://auth.stoocker.app
# NEXT_PUBLIC_BASE_DOMAIN=stoocker.app

# Database (Backend)
DATABASE_URL=postgresql://user:password@localhost:5432/stocker_db

# JWT Secrets (Backend)
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# HMAC Secret for tenant signature (Backend)
# IMPORTANT: Must be at least 32 characters (env.ts validation requires min 32 chars)
HMAC_SECRET=your-32-character-secret-key-change-in-production-please-min-32-chars

# Cookie Domain (optional - defaults to NEXT_PUBLIC_BASE_DOMAIN)
# COOKIE_BASE_DOMAIN=stoocker.app

# Email Configuration (Backend - for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@stocker.app

# Redis (Optional - for caching & sessions)
REDIS_URL=redis://localhost:6379

# Feature Flags
NEXT_PUBLIC_ENABLE_2FA=true
NEXT_PUBLIC_ENABLE_PASSWORD_RECOVERY=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Analytics (Optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ANALYTICS_ID=

# Logging Configuration
NEXT_PUBLIC_LOG_LEVEL=INFO
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_EXTERNAL_LOG_ENDPOINT=

# Monitoring & Error Tracking
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# Docker Management Service (For production server monitoring)
# DockerManagement__SshHost=95.217.219.4
# DockerManagement__SshUser=root
# DockerManagement__SshKeyBase64=YOUR_BASE64_ENCODED_SSH_KEY
