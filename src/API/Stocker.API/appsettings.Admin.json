{
  "AdminSettings": {
    "EnableDetailedAuditLogging": true,
    "MaxAdminSessionDuration": "08:00:00",
    "RequireTwoFactorForAdmins": true,
    "AdminPasswordPolicy": {
      "MinimumLength": 12,
      "RequireUppercase": true,
      "RequireLowercase": true,
      "RequireDigit": true,
      "RequireNonAlphanumeric": true,
      "RequiredUniqueChars": 6
    }
  },
  "RateLimiting": {
    "AdminEndpoints": {
      "MaxRequests": 100,
      "TimeWindowSeconds": 60
    },
    "AdminAuthEndpoints": {
      "MaxRequests": 20,
      "TimeWindowSeconds": 60
    },
    "AdminExportEndpoints": {
      "MaxRequests": 10,
      "TimeWindowSeconds": 3600
    },
    "AdminBulkOperations": {
      "MaxRequests": 5,
      "TimeWindowSeconds": 600
    }
  },
  "AdminPermissions": {
    "SystemAdmin": [
      "ManageAdmins",
      "ManageTenants",
      "CreateTenant",
      "ExportData",
      "ExportAuditLogs",
      "DataMaintenance",
      "ViewSystemMetrics",
      "ManagePackages",
      "SystemConfiguration",
      "ViewAllTenants",
      "ModifyAllTenants"
    ],
    "TenantAdmin": [
      "ExportData",
      "ViewTenantMetrics",
      "ManageTenantUsers",
      "ViewTenantAuditLogs",
      "ConfigureTenantSettings"
    ]
  },
  "AuditRetention": {
    "AdminActionsRetentionDays": 365,
    "EntityAuditRetentionDays": 180,
    "LoginAuditRetentionDays": 90
  }
}