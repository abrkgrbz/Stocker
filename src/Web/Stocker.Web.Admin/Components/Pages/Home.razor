@page "/"
@using Stocker.Web.Admin.Services
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Stocker Admin Panel</PageTitle>

@if (_isLoading)
{
    <div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="container-fluid">
        <h1>Stocker Admin Panel</h1>
        <p class="lead">Hoş geldiniz, @userName! Multi-Tenant SaaS Yönetim Sistemi</p>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">
                    <i class="bi bi-building"></i> Tenants
                </div>
                <div class="card-body">
                    <h5 class="card-title">Tenant Yönetimi</h5>
                    <p class="card-text">Müşterilerinizi yönetin</p>
                    <a href="/tenants" class="btn btn-light">Görüntüle</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">
                    <i class="bi bi-box"></i> Paketler
                </div>
                <div class="card-body">
                    <h5 class="card-title">Paket Yönetimi</h5>
                    <p class="card-text">SaaS paketlerini yönetin</p>
                    <a href="/packages" class="btn btn-light">Görüntüle</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-header">
                    <i class="bi bi-credit-card"></i> Abonelikler
                </div>
                <div class="card-body">
                    <h5 class="card-title">Abonelik Yönetimi</h5>
                    <p class="card-text">Aktif abonelikleri takip edin</p>
                    <a href="/subscriptions" class="btn btn-light">Görüntüle</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">
                    <i class="bi bi-graph-up"></i> Raporlar
                </div>
                <div class="card-body">
                    <h5 class="card-title">Raporlama</h5>
                    <p class="card-text">Sistem raporlarını görüntüleyin</p>
                    <a href="/reports" class="btn btn-light">Görüntüle</a>
                </div>
            </div>
        </div>
    </div>
    </div>
}

@code {
    private string userName = "";
    private bool _shouldRedirectToLogin = false;
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        // Check authentication
        var isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (!isAuthenticated)
        {
            _shouldRedirectToLogin = true;
            return;
        }
        
        var user = await AuthService.GetCurrentUserAsync();
        userName = user?.Username ?? "User";
        _isLoading = false;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && _shouldRedirectToLogin)
        {
            Navigation.NavigateTo("/login");
        }
    }
}
