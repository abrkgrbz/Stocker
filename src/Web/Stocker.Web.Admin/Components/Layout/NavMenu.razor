@using Stocker.Web.Admin.Services
@inject IAuthService AuthService
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Stocker Admin</a>
        <div class="user-menu">
            <span class="user-name">@userName</span>
            <button class="btn btn-sm btn-outline-light ms-2" @onclick="Logout">
                <i class="bi bi-box-arrow-right"></i> Çıkış
            </button>
        </div>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Ana Sayfa
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tenants">
                <span class="bi bi-building" aria-hidden="true"></span> Tenant Yönetimi
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="packages">
                <span class="bi bi-box" aria-hidden="true"></span> Paket Yönetimi
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="subscriptions">
                <span class="bi bi-credit-card" aria-hidden="true"></span> Abonelikler
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="users">
                <span class="bi bi-people" aria-hidden="true"></span> Kullanıcılar
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="reports">
                <span class="bi bi-graph-up" aria-hidden="true"></span> Raporlar
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="test-api">
                <span class="bi bi-bug" aria-hidden="true"></span> API Test
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private string? userName = "";

    protected override async Task OnInitializedAsync()
    {
        var user = await AuthService.GetCurrentUserAsync();
        userName = user?.Username ?? "User";
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", replace: true);
    }
}

<style>
    .user-menu {
        display: flex;
        align-items: center;
        margin-left: auto;
    }

    .user-name {
        color: white;
        margin-right: 10px;
        font-weight: 500;
    }
</style>

