# Environment Variables Template for Stocker
# Copy this file to .env and fill in your values
# DO NOT commit .env to source control

# Database Configuration
DatabaseSettings__ServerName=YOUR_SQL_SERVER
DatabaseSettings__MasterDatabaseName=StockerMasterDb
DatabaseSettings__UseWindowsAuthentication=false
DatabaseSettings__UserId=YOUR_DB_USER
DatabaseSettings__Password=YOUR_DB_PASSWORD

# JWT Configuration
JwtSettings__Secret=YOUR_JWT_SECRET_MINIMUM_32_CHARACTERS

# Admin Credentials
AdminCredentials__DefaultAdminEmail=admin@yourdomain.com
AdminCredentials__DefaultAdminPassword=YOUR_SECURE_ADMIN_PASSWORD

# Email Configuration
EmailSettings__SmtpHost=smtp.your-provider.com
EmailSettings__SmtpPort=587
EmailSettings__SmtpUsername=YOUR_SMTP_USERNAME
EmailSettings__SmtpPassword=YOUR_SMTP_PASSWORD
EmailSettings__FromEmail=noreply@yourdomain.com
EmailSettings__FromName=Stocker System

# Storage Configuration
StorageSettings__Provider=AzureBlob
StorageSettings__ConnectionString=YOUR_STORAGE_CONNECTION_STRING

# External APIs
ExternalApiKeys__GoogleMapsApiKey=YOUR_GOOGLE_MAPS_API_KEY
ExternalApiKeys__SendGridApiKey=YOUR_SENDGRID_API_KEY
ExternalApiKeys__StripeApiKey=YOUR_STRIPE_API_KEY
ExternalApiKeys__StripeWebhookSecret=YOUR_STRIPE_WEBHOOK_SECRET

# Application URLs
ASPNETCORE_URLS=https://+:443;http://+:80
ApiSettings__BaseUrl=https://api.yourdomain.com

# Environment
ASPNETCORE_ENVIRONMENT=Production