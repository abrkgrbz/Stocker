# ========================================
# Stocker - All Environment Variables
# ========================================
# Complete list of all environment variables for Coolify deployment
# Copy relevant sections to Coolify's environment variable section

# ========================================
# DATABASE (SQL Server)
# ========================================
SA_PASSWORD=YourStrongPassword123!
MSSQL_PID=Express
ACCEPT_EULA=Y
ConnectionStrings__MasterConnection=Server=sqlserver,1433;Database=Stocker_Master;User Id=sa;Password=${SA_PASSWORD};TrustServerCertificate=True
ConnectionStrings__TenantConnection=Server=sqlserver,1433;User Id=sa;Password=${SA_PASSWORD};TrustServerCertificate=True
ConnectionStrings__DefaultConnection=Server=sqlserver,1433;Database=Stocker_Master;User Id=sa;Password=${SA_PASSWORD};TrustServerCertificate=True
ConnectionStrings__HangfireConnection=Server=sqlserver,1433;Database=Stocker_Hangfire;User Id=sa;Password=${SA_PASSWORD};TrustServerCertificate=True

# ========================================
# REDIS
# ========================================
REDIS_PASSWORD=RedisPassword123!
REDIS_MAX_MEMORY=256mb
REDIS_EVICTION_POLICY=allkeys-lru
REDIS_LOG_LEVEL=notice

# ========================================
# SEQ (Logging)
# ========================================
SEQ_API_KEY=YourSeqApiKey123
ACCEPT_EULA=Y

# ========================================
# MINIO (Object Storage)
# ========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=MinioPassword123!
MINIO_BROWSER=on
MINIO_DOMAIN=s3.stoocker.app

# ========================================
# JWT & SECURITY (API)
# ========================================
JWT_SECRET=YourSuperSecretJWTKey_ChangeThis_MinLength32Characters!

# ========================================
# EMAIL (API)
# ========================================
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ========================================
# NEXTAUTH (Web & Auth Services)
# ========================================
NEXTAUTH_SECRET=YourNextAuthSecret_ChangeThis_MinLength32Characters!
NEXTAUTH_URL=https://stoocker.app  # or https://auth.stoocker.app

# ========================================
# API ENDPOINTS
# ========================================
NEXT_PUBLIC_API_URL=https://api.stoocker.app  # For Next.js apps
VITE_API_URL=https://api.stoocker.app         # For Vite apps
