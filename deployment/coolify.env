# Coolify Environment Variables for Stocker Test Environment

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=stocker_master
DB_USER=postgres
DB_PASSWORD=StockerDb2024!

# Tenant Database Template
TENANT_DB_TEMPLATE=stocker_tenant_template

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=Redis2024!

# JWT Configuration
JWT_SECRET_KEY=ThisIsAVerySecureSecretKeyForStockerTestEnvironment2024!
JWT_ISSUER=stocker-test
JWT_AUDIENCE=stocker-test
JWT_EXPIRY_HOURS=24

# Environment
ASPNETCORE_ENVIRONMENT=Development
ENVIRONMENT=test

# URLs
API_URL=http://stocker-api:80
SIGNALR_URL=http://stocker-api:80/hubs
PUBLIC_API_URL=https://api.test.stocker.app
PUBLIC_WEB_URL=https://test.stocker.app

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://stocker-web:80,https://test.stocker.app

# SignalR Settings
SIGNALR_ENABLE_DETAILED_ERRORS=true
SIGNALR_KEEP_ALIVE_INTERVAL=15
SIGNALR_CLIENT_TIMEOUT_INTERVAL=30

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_NON_ALPHANUMERIC=true
PASSWORD_MAX_FAILED_ATTEMPTS=5

# Email Settings (Optional - for test environment)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@stocker.app

# Monitoring & Alerts (Optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
ALERT_EMAIL=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=Information
LOG_TO_FILE=true
LOG_FILE_PATH=/app/logs

# Test Data
SEED_TEST_DATA=true
TEST_ADMIN_EMAIL=admin@stocker.test
TEST_ADMIN_PASSWORD=Admin@2024!

# Feature Flags
FEATURE_PAYMENT_ENABLED=false
FEATURE_INVOICE_GENERATION=false
FEATURE_EMAIL_VERIFICATION=true
FEATURE_SMS_VERIFICATION=false

# Performance
MAX_CONCURRENT_CONNECTIONS=100
REQUEST_TIMEOUT_SECONDS=30
DATABASE_CONNECTION_POOL_SIZE=20

# Security
HTTPS_REDIRECT=false
HSTS_ENABLED=false
XSS_PROTECTION=true
CONTENT_TYPE_NOSNIFF=true

# Coolify Specific
COOLIFY_AUTO_UPDATE=true
COOLIFY_WEBHOOK_SECRET=your_webhook_secret_here