# API Configuration
VITE_API_URL=https://api.stoocker.app
VITE_API_TIMEOUT=30000

# Environment
VITE_NODE_ENV=development
VITE_ENVIRONMENT=development
VITE_APP_VERSION=1.0.0

# Features
VITE_ENABLE_LOGGING=true
VITE_ENABLE_2FA=true
VITE_ENABLE_MOCK_AUTH=false
VITE_ENABLE_MONITORING=true

# Error Tracking (Sentry)
# Get your DSN from https://sentry.io/
VITE_SENTRY_DSN=https://your-key@sentry.io/project-id
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# Security
VITE_CSP_REPORT_URI=https://api.stocker.com/csp-report
VITE_ENCRYPTION_KEY=your-encryption-key-here

# WebSocket/SignalR
VITE_WS_URL=wss://api.stoocker.app/hub
VITE_WS_RECONNECT_INTERVAL=5000

# Storage
VITE_STORAGE_TYPE=sessionStorage
VITE_STORAGE_PREFIX=stocker_

# Analytics (Optional)
VITE_GA_TRACKING_ID=
VITE_GTM_ID=

# Debugging
VITE_DEBUG=false
VITE_LOG_LEVEL=warn

# Authentication (Never store secrets here!)
# All authentication should be handled server-side
# Tokens should be stored in secure storage, not environment variables