{
  "name": "Stocker ERP - İşletme Yönetim Sistemi",
  "short_name": "Stocker",
  "description": "Modern, bulut tabanlı işletme yönetim sistemi",
  "theme_color": "#667eea",
  "background_color": "#ffffff",
  "display": "standalone",
  "orientation": "portrait",
  "scope": "/",
  "start_url": "/",
  "id": "stocker-erp",
  "categories": ["business", "productivity", "finance"],
  "lang": "tr",
  "dir": "ltr",
  "icons": [
    {
      "src": "/icon-192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [],
  "shortcuts": [],
  "related_applications": [],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+stocker",
      "url": "/open?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["application/pdf", ".pdf", "image/*"]
        }
      ]
    }
  },
  "features": [
    "notifications",
    "push",
    "background-sync",
    "periodic-background-sync"
  ]
}