generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== PAGES ====================

model Page {
  id          String      @id @default(cuid())
  slug        String      @unique
  title       String
  description String?
  content     Json?       // Rich content blocks
  metaTitle   String?
  metaDescription String?
  metaKeywords String?
  ogImage     String?
  status      PageStatus  @default(DRAFT)
  template    String      @default("default")
  order       Int         @default(0)
  views       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  publishedAt DateTime?

  @@map("pages")
}

enum PageStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// ==================== BLOG ====================

model BlogCategory {
  id          String      @id @default(cuid())
  slug        String      @unique
  name        String
  description String?
  color       String      @default("#667eea")
  order       Int         @default(0)
  posts       BlogPost[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("blog_categories")
}

model BlogPost {
  id              String          @id @default(cuid())
  slug            String          @unique
  title           String
  excerpt         String?
  content         Json?           // Rich content blocks
  coverImage      String?
  metaTitle       String?
  metaDescription String?
  metaKeywords    String?
  authorName      String
  authorAvatar    String?
  readTime        Int             @default(5)  // minutes
  status          BlogPostStatus  @default(DRAFT)
  featured        Boolean         @default(false)
  views           Int             @default(0)
  categoryId      String?
  category        BlogCategory?   @relation(fields: [categoryId], references: [id])
  tags            BlogTag[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  publishedAt     DateTime?

  @@map("blog_posts")
}

model BlogTag {
  id        String     @id @default(cuid())
  slug      String     @unique
  name      String
  posts     BlogPost[]
  createdAt DateTime   @default(now())

  @@map("blog_tags")
}

enum BlogPostStatus {
  DRAFT
  PUBLISHED
  SCHEDULED
  ARCHIVED
}

// ==================== FAQ ====================

model FAQCategory {
  id          String    @id @default(cuid())
  slug        String    @unique
  name        String
  description String?
  icon        String?
  order       Int       @default(0)
  faqs        FAQ[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("faq_categories")
}

model FAQ {
  id         String       @id @default(cuid())
  question   String
  answer     String       @db.Text
  categoryId String?
  category   FAQCategory? @relation(fields: [categoryId], references: [id])
  order      Int          @default(0)
  isActive   Boolean      @default(true)
  views      Int          @default(0)
  helpful    Int          @default(0)
  notHelpful Int          @default(0)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  @@map("faqs")
}

// ==================== SETTINGS ====================

model CMSSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json
  group     String   @default("general")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("cms_settings")
}

// ==================== MEDIA ====================

model Media {
  id          String    @id @default(cuid())
  filename    String
  originalName String
  mimeType    String
  size        Int
  url         String
  alt         String?
  caption     String?
  folder      String    @default("general")
  createdAt   DateTime  @default(now())

  @@map("media")
}

// ==================== CHANGELOG / UPDATES ====================

model Update {
  id          String       @id @default(cuid())
  version     String
  title       String
  description String?
  content     Json?
  type        UpdateType   @default(FEATURE)
  isPublished Boolean      @default(false)
  publishedAt DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("updates")
}

enum UpdateType {
  FEATURE
  IMPROVEMENT
  FIX
  SECURITY
}

// ==================== CAREERS ====================

model JobPosition {
  id           String        @id @default(cuid())
  slug         String        @unique
  title        String
  department   String
  location     String
  type         JobType       @default(FULL_TIME)
  description  String        @db.Text
  requirements String?       @db.Text
  benefits     String?       @db.Text
  salaryMin    Int?
  salaryMax    Int?
  isActive     Boolean       @default(true)
  applications JobApplication[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@map("job_positions")
}

model JobApplication {
  id          String      @id @default(cuid())
  positionId  String
  position    JobPosition @relation(fields: [positionId], references: [id])
  fullName    String
  email       String
  phone       String?
  resumeUrl   String?
  coverLetter String?     @db.Text
  linkedIn    String?
  status      ApplicationStatus @default(PENDING)
  notes       String?     @db.Text
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("job_applications")
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
  REMOTE
}

enum ApplicationStatus {
  PENDING
  REVIEWING
  INTERVIEW
  OFFER
  HIRED
  REJECTED
}

// ==================== CONTACT / SUPPORT ====================

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String   @db.Text
  isRead    Boolean  @default(false)
  isReplied Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("contact_messages")
}

model SupportTicket {
  id          String         @id @default(cuid())
  ticketNo    String         @unique
  name        String
  email       String
  subject     String
  message     String         @db.Text
  category    String
  priority    TicketPriority @default(MEDIUM)
  status      TicketStatus   @default(OPEN)
  replies     TicketReply[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@map("support_tickets")
}

model TicketReply {
  id        String        @id @default(cuid())
  ticketId  String
  ticket    SupportTicket @relation(fields: [ticketId], references: [id])
  message   String        @db.Text
  isStaff   Boolean       @default(false)
  authorName String
  createdAt DateTime      @default(now())

  @@map("ticket_replies")
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  WAITING
  RESOLVED
  CLOSED
}
