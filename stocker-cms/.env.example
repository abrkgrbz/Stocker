# Server
PORT=5002
HOST=0.0.0.0
NODE_ENV=development

# Database - Using same PostgreSQL server with separate database
# For Docker: postgresql://stocker_admin:PASSWORD@postgres:5432/stocker_cms?schema=public
# For Local: postgresql://stocker_admin:PASSWORD@localhost:5432/stocker_cms?schema=public
DATABASE_URL="postgresql://username:password@host:5432/stocker_cms?schema=public"

# JWT Secret (same as main API for shared auth)
JWT_SECRET="your-super-secret-jwt-key-here"

# CORS
# For Production: https://stoocker.app,https://admin.stoocker.app
CORS_ORIGIN="http://localhost:3001,http://localhost:5173"

# Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760
